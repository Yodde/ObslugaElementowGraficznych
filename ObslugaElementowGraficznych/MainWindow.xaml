<Window x:Class="ObslugaElementowGraficznych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="244,59,0,0" VerticalAlignment="Top" Width="87" Height="45" Click="Start_Click"/>
        <TextBox x:Name="silnia" HorizontalAlignment="Left" Height="45" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="70,59,0,0" Text="10"/>
        <Rectangle x:Name="LoadBar" Fill="#FF35FF08" HorizontalAlignment="Left" Height="62" VerticalAlignment="Top" Width="401" Margin="70,122,0,0" StrokeThickness="0" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False">
            <Rectangle.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.LayoutTransform>
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>
        <TextBox x:Name="Pozostalo" HorizontalAlignment="Left" Height="32" Margin="70,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>

    </Grid>
</Window>
